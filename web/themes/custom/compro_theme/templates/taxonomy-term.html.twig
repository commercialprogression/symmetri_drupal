<article{{ attributes.setAttribute('id', 'taxonomy-term-' ~ term.id).addClass(classes) }}>
  {% if content.field_image.0 %}
    <div{{ teaser_attributes }}>
      <a{{ link_attributes }}>
        {{ content.field_image }}
      </a>
    </div>
  {% endif %}
  <div{{ content_attributes.addClass('taxonomy_term__content') }}>
    {{ title_prefix }}
    {% if not page %}
      <h2{{ title_attributes }}><a href="{{ url }}">{{ name }}</a></h2>
    {% endif %}
    {{ title_suffix }}
    {{ content |without('field_image') }}
  </div>
</article>
